<!-- ユーザープロフィール -->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h1>User</h1>
      <table>
        <tr><td><%= attachment_image_tag @user, :profile_image, :fill, 200, 120 %></td></tr>
        <tr><td>name</td><td><%= @user.name %></td></tr>
        <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
      </table>
      <%= link_to edit_user_path(@user) do %>
        <span class="col-xs-3 btn btn-default glyphicon glyphicon-wrench edit_user_7820"></span>
      <% end %>

      <!-- 新規投稿部分 -->
      <h1>New Book</h1>
      <%= form_for(@book) do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>body</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book',class: "btn btn-primary col-x-12" %>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Book</h2>
      <table class="table">
        <th>   </th>
        <th>title</th>
        <th>opinion</th>
        <% @thebook.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle
            pull-left profile-thumb", fallback: "no_image.jpg" %><br>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
       <% end %>
      </table>
    </div>
  </div>
</div>
