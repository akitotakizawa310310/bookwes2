<!-- ユーザープロフィール　-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
     <h1>User Info</h1>
     <table>
      <tr><td><%= attachment_image_tag current_user, :profile_image, :fill, 200, 120 %></td></tr>
      <tr><td>name</td><td><%= current_user.name %></td></tr>
      <tr><td>introduction</td><td><%= current_user.introduction %></td></tr>
    </table>
     <%= link_to edit_user_path(current_user.id) do %>
　   <span class="col-xs-3 btn btn-default glyphicon glyphicon-wrench edit_user_7820"></span>
     <% end %>

<!-- 新規投稿部分　-->
    <h1>New Book</h1>
     <%= form_for(@book) do |f| %>
     <h4>Title</h4>
      <%= f.text_field :title,autofocus:true,class:"form-control",id:"inputtitle",placeeholder:"Title" %>
    <h4>Opinion</h4>
     <%= f.text_area :body,autofocus:true,class:"form-control",id:"inputbody",placeeholder:"Body" %>
     <%= f.submit 'Create Book',class: "btn btn-primary col-x-12" %>
    <% end %>
</div>

<!-- 本の一覧部分　-->
<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>
    <tr>
     <td><%= attachment_image_tag book.user, :profile_image, :fill, 200, 120 %></td>
     <td><%= link_to book.title, book_path(book) %></td>
     <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
