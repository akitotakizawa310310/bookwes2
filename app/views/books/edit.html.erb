<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title,autofocus:true,class:"form-control",id:"inputtitle",placeeholder:"Title" %>
    <h4>Opinion</h4>
    <%= f.text_area :body,autofocus:true,class:"form-control",id:"inputbody",placeeholder:"Body" %> 
    <%= f.submit 'Update Book',class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

<%= link_to 'Show',book_path(@book) %>
<%= link_to 'Back',book_path %>
